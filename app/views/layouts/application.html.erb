  <%= render partial: "/brown/login_modal"%>

<!-- 로그인이 안돼있으면 로그인창 강제 -->

<% if current_user.nil? %>
<script>                  
$(document).ready(function () {

    $("#login").modal({backdrop: 'static', keyboard: false});

});

</script>
<% elsif current_user.userhashrels.empty? %>
<%= render partial: "/brown/select_hash", locals:{hash:@hash}%>

<script>
$(document).ready(function () {

    $("#nohash").modal({backdrop: 'static', keyboard: false});

});
</script>

<% end %>
</head>

